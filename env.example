# AI Assistant 项目环境变量配置
# 复制此文件为 .env 并根据需要修改配置

# ===================
# 服务端口配置
# ===================
# 前端服务端口 (Next.js)
NEXT_PORT=3000
# 后端服务端口 (NestJS)
SERVER_PORT=4000

# ===================
# 数据库配置
# ===================
# PostgreSQL 配置
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ai-assistant-dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ai-assistant-dev

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:16379

# ===================
# API 配置
# ===================
# 前端访问后端 API 的地址
NEXT_PUBLIC_API_URL=http://localhost:4000

# ===================
# 认证配置
# ===================
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRES_IN=6h

# ===================
# 开发环境配置
# ===================
NODE_ENV=development

# ===================
# 日志配置
# ===================
LOG_LEVEL=debug
LOG_DIR=./logs
LOG_MAX_SIZE=20971520
LOG_MAX_FILES=7
LOG_CONSOLE=true
LOG_FILE=true

# ===================
# 缓存配置
# ===================
CACHE_TTL=300
CACHE_MAX=1000
CACHE_TYPE=memory

# ===================
# 存储配置
# ===================
STORAGE_TYPE=local
STORAGE_BASE_PATH=./data/storage

# ===================
# Mock 配置
# ===================
MOCK_ENABLE=true
MOCK_PATH=./mock
