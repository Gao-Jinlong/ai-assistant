generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  uid       String   @unique
  email     String
  name      String?
  password  String
  avatar    String?
  deleted   Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
}

model Thread {
  id           Int      @id @default(autoincrement())
  uid          String   @unique
  title        String?
  userUid      String
  messageCount Int      @default(0)
  totalTokens  Int      @default(0)
  metadata     Json?
  deleted      Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([userUid])
}

model Message {
  id        Int      @id @default(autoincrement())
  uid       String   @unique
  threadUid String
  content   String   @db.Text
  role      String
  deleted   Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([threadUid])
}
