generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  uid       String   @unique
  email     String
  name      String?
  password  String
  avatar    String?
  deleted   Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
}

model Thread {
  id           Int      @id @default(autoincrement())
  uid          String   @unique
  title        String?
  userUid      String
  messageCount Int      @default(0)
  totalTokens  Int      @default(0)
  metadata     Json?
  status       Int      @default(0)
  deleted      Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([userUid])
  @@index([status])
}

model Message {
  id        Int      @id @default(autoincrement())
  uid       String   @unique
  threadUid String
  content   String
  role      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deleted   Boolean  @default(false)

  @@index([threadUid])
}
